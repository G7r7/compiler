{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "*.cpp",
                "-o",
                "compiler.exe",
                "-std=c++14"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "*.cpp",
                "-o",
                "compiler.exe",
                "-std=c++14"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "./compiler.exe",
            "args": [
                "program.cmm",
                "output" 
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "execute",
            "type": "shell",
            "command": "./msm/msm.exe",
            "args": [
                "-m",
                "output",
            ],
            "group": "build"
        },
        {
            "label": "Test program",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build debug",
                "compile",
                "execute",
            ],
            "group": "build",
        },
    ]
}